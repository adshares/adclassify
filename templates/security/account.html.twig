{% extends 'regular_page.html.twig' %}

{% block content %}
    <div class="container">
        <h2>{{ app.user.fullName }} ({{ app.user.email }})</h2>
        <div class="row mt-4">
            <div class="col">
                <ul class="list-group list-group-horizontal">
                    {% for apiKey in app.user.apiKeys %}
                        <li class="list-group-item">
                            Api key: <code>{{ apiKey.name }}</code><br/>
                            secret: <code>{{ apiKey.secret }}</code>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
